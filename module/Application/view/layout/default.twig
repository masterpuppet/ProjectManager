{{ doctype() }}
<html lang="en">
<head>
    <meta charset="utf-8">

    {% block title %}
    {{ headTitle('ZF Skeleton Application') }}
    {% endblock %}

    {% block meta %}
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {{ headMeta() }}
    {% endblock %}

    {% block link %}
    <link href="{{ basePath('/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css">
    <link href="{{ basePath('/css/style.css') }}" rel="stylesheet" type="text/css">
    <link href="{{ basePath('/css/bootstrap-responsive.min.css') }}" rel="stylesheet" type="text/css">
    <link rel="shortcut icon" href="/images/favicon.ico">
    {{ headLink() }}
    {% endblock %}

    {% block headscript %}
    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
    <script src="{{ basePath('/js/html5.js') }}"></script>
    <![endif]-->
    {{ headScript() }}
    {% endblock %}
</head>

<body>

<div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">

                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            <a class="brand" href="{{ url('home') }}">Skeleton Application</a>
            <div class="nav-collapse">
                <ul class="nav">
                    <li class="active"><a href="{{ url('home') }}">Home</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="container">

    {% block content %}{% endblock %}

    <hr>

    <footer>
        <p>&copy; 2006 - 2012 by Zend Technologies Ltd. All rights reserved.</p>
    </footer>

</div>

{% block inlinescript %}
{{ inlineScript() }}
{% endblock %}

</body>
</html>